
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section cssHeader{
    <link href="~/libs/plugins/thumbimage/ninja-slider.css" rel="stylesheet" />
    <link href="~/libs/plugins/thumbimage/thumbnail-slider.css" rel="stylesheet" />
    <style>
        .page-wrapper {
            height: 100%;
        }

        .product-detail-image {
            width: 627px;
        }

        .product-detail-info {
            width: 319px;
        }

        .product-link {
            color: #333;
            display: block;
            max-height: 3em;
            line-height: 1.5em;
            overflow: hidden;
            text-transform: uppercase;
            font-weight: bold;
        }

        .description {
            margin-top: 20px;
            font-size: 0.9em;
            line-height: 1.2em;
            margin-bottom: 20px;
        }

            .description p, .description ul li {
                margin: 0px;
                font-size: 12px;
                line-height: normal;
                font-family: 'Helvetica Neue';
                color: rgb(69, 69, 69);
            }

        .product-detail-addcart {
            margin-bottom: 54px;
        }

        .btn-addcart {
            padding: 5px 15px;
            background: #eda6a6;
            color: #fff;
            width: auto;
        }

            .btn-addcart:hover {
                color: #fff;
                text-decoration: none;
            }

        .title-other-product {
            color: #000;
            margin-bottom: 20px;
            display: block;
        }

        .other-product-list {
            padding: 0;
            margin: 0;
            list-style: none;
        }

            .other-product-list li {
                float: left;
                display: inline;
                width: 100px;
                height: 100px;
                margin-bottom: 10px;
            }

                .other-product-list li:nth-child(2n+1) {
                    margin-right: 10px;
                }

                .other-product-list li a {
                    display: block;
                }

                    .other-product-list li a img {
                        width: 100px;
                        height: 100px;
                    }
    </style>
}

@section jsFooter{
    <script src="~/libs/plugins/thumbimage/ninja-slider.js"></script>
    <script src="~/libs/plugins/thumbimage/thumbnail-slider.js"></script>
}

